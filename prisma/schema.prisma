datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL") // chỉ cần khi dùng migrate dev với shadow db
}

generator client {
  provider = "prisma-client-js"
}

// ======================
// 1. Người dùng
// ======================
model User {
  id                  Int                    @id @default(autoincrement())
  username            String?                @unique
  email               String                 @unique
  passwordHash        String
  avatar              String?
  coins               Int                    @default(2500)
  streak              Int                    @default(0)
  lastLogin           DateTime?
  totalLearnedWords   Int                    @default(0)
  totalReviews        Int                    @default(0)
  createdAt           DateTime               @default(now())
  updatedAt           DateTime               @updatedAt
  role                Role                   @default(USER)

  // Quan hệ
  flashcardStatus     UserFlashcardStatus[]
  items               UserItem[]
  shopSettings        UserShopSettings?
  transactions        Transaction[]          // giao dịch của chính user (userId)
  transactionsFrom    Transaction[]          @relation("FromUser")   // user là người gửi
  transactionsTo      Transaction[]          @relation("ToUser")     // user là người nhận
  dailyReward         DailyReward?
  achievements        UserAchievement[]

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

// ======================
// 2. Flashcard & Tiến độ học
// ======================
model FlashCard {
  id          Int                     @id @default(autoincrement())
  chinese     String
  pinyin      String
  meaning     String
  hskLevel    Int                     @default(0) @map("hsk_level")
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt

  userStatus  UserFlashcardStatus[]

  @@map("FlashCard")
}

model UserFlashcardStatus {
  id              Int             @id @default(autoincrement())
  userId          Int
  flashcardId     Int
  status          FlashcardStatus @default(NOT_LEARNED)
  lastReviewedAt  DateTime?
  nextReviewDue   DateTime?
  reviewCount     Int             @default(0)
  easeFactor      Float           @default(2.5)
  interval        Int             @default(0)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  flashcard   FlashCard @relation(fields: [flashcardId], references: [id], onDelete: Cascade)

  @@unique([userId, flashcardId])
  @@map("user_flashcard_status")
}

enum FlashcardStatus {
  NOT_LEARNED
  LEARNING
  REVIEW
  MASTERED
}

// ======================
// 3. Shop & Vật phẩm
// ======================
model ShopItem {
  id          Int           @id @default(autoincrement())
  name        String
  price       Int
  type        ShopItemType
  image       String
  lottieUrl   String?
  description String?
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  userItems   UserItem[]
  transactions Transaction[]   // thêm quan hệ ngược lại

  @@map("shop_items")
}

enum ShopItemType {
  PET
  THEME
  AVATAR
  SKIN
  MUSIC
}

model UserItem {
  id          Int         @id @default(autoincrement())
  userId      Int
  itemId      Int
  purchasedAt DateTime    @default(now())

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  shopItem    ShopItem  @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([userId, itemId])
  @@map("user_items")
}

model UserShopSettings {
  id           Int   @id @default(autoincrement())
  userId       Int   @unique
  activePet    Int?
  activeAvatar Int?
  activeTheme  Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_shop_settings")
}

// ======================
// 4. Giao dịch xu
// ======================
enum TransactionType {
  PURCHASE
  SELL
  REWARD
  DAILY_LOGIN
  BONUS
  REFUND
  ADMIN_GIFT
  LEVEL_UP
  TRANSFER_OUT
  TRANSFER_IN
}

model Transaction {
  id          Int             @id @default(autoincrement())
  userId      Int
  type        TransactionType
  amount      Int
  itemId      Int?
  fromUserId  Int?
  toUserId    Int?
  description String
  createdAt   DateTime        @default(now())

  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  fromUser    User?           @relation("FromUser", fields: [fromUserId], references: [id])
  toUser      User?           @relation("ToUser", fields: [toUserId], references: [id])
  item        ShopItem?       @relation(fields: [itemId], references: [id])

  @@index([userId, createdAt])
  @@index([type])
  @@index([fromUserId])
  @@index([toUserId])
}

// ======================
// 5. Điểm danh hàng ngày
// ======================
model DailyReward {
  id         Int       @id @default(autoincrement())
  userId     Int       @unique
  lastClaim  DateTime?
  streak     Int       @default(0)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("daily_rewards")
}

// ======================
// 6. Thành tựu
// ======================
model Achievement {
  id              Int                 @id @default(autoincrement())
  name            String
  description     String
  icon            String?
  condition       String?
  points          Int                 @default(0)
  createdAt       DateTime            @default(now())

  userAchievements UserAchievement[]

  @@map("achievements")
}

model UserAchievement {
  userId        Int
  achievementId Int
  unlockedAt    DateTime @default(now())

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@id([userId, achievementId])
  @@map("user_achievements")
}